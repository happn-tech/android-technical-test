				{
					"name": "Delete a favorite",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"id": "83e40f8a-0525-4270-b8e6-6fb130e58767",
								"exec": [
									"var host = pm.variables.get(\"host\");",
									"var port = pm.variables.get(\"port\");",
									"",
									"",
									"pm.sendRequest(`http://${host}:${port}/articles`, function (err, response) {",
									"    var result = response.json();",
									"    ",
									"    if (result[0] && result[0]._id){",
									"        postman.setEnvironmentVariable(\"article_id\", result[0]._id);",
									"    }",
									"",
									"    console.log(result[0]._id)",
									"    ",
									"    ",
									" const postFavoriteRequest = {",
									"  url: `http://${host}:${port}/favorites`,",
									"  method: 'POST',",
									"  body: {",
									"      mode: 'urlencoded',",
									"      urlencoded: {",
									"        { key: \"article_id\", value: pm.environment.get(\"article_id\") }",
									"      }",
									"  }",
									"};",
									"",
									"",
									"pm.sendRequest(postFavoriteRequest, function (err, response) {",
									"    var favorite = response.json();",
									"    console.log(\"favorite\");",
									"    console.log(favorite);",
									"    if (favorite && favorite._id){",
									"        postman.setEnvironmentVariable(\"favorite_id\",favorite._id);",
									"    }",
									"});",
									"    ",
									"}); ",
									""
								],
								"type": "text/javascript"
							}
						},
